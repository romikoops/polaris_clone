}
.col-xs-5{
  padding: 0%;
  margin: 0%;
  word-wrap: break-word;
}
.col-xs-3{
  padding: 0%;
  margin: 0%;
  word-wrap: break-word;
}
.col-xs-7{
  padding: 0%;
  margin: 0%;
  word-wrap: break-word;
  padding-top: 35px;
}
.col-xs-8{
  padding: 0%;
