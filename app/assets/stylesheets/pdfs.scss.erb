body {
  font-family: lato;
}

.wrapper {
  position: relative;
  margin: 0;
  width: 100%;
}
.wrapper-quotations {
  padding-left: 400px;
  padding-right: 400px;
  color: #4F4F4F;
  font-family: 'Montserrat', sans-serif;
}
.wrapper-quotations .title {
  text-align: center;
  padding: 320px 0 !important;
}
.wrapper-quotations .title h1 {
  font-size: 80px !important;
  font-weight: bold !important;
}
.wrapper-quotations .title p {
  font-size: 40px !important;
}
.wrapper-quotations .title hr {
  max-width: 530px;
  border-style: solid;
  border-width: 2px;
  margin: 40px 0;
}
.col-xs-12{
  padding: 0%;
  margin: 0%;
  word-wrap: break-word; 
}

.col-xs-6{
  padding: 0%;
  margin: 0%;
  word-wrap: break-word;
}
