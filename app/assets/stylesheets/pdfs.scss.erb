<% environment.context_class.instance_eval { include ApplicationHelper } %>

.wrapper {
  position: relative;
  margin: 0;
  width: 100%;
}
.wrapper-quotations {
  padding-left: 80px;
  padding-right: 60px;
  padding-top: 20px;
  color: #4F4F4F !important;
  font-family: 'Roboto', sans-serif !important;
  .title {
    padding-bottom: 40px;
    h1 {
      font-size: 20px !important;
      font-weight: bold !important;
      margin: 0;
    }
    p {
      margin: 0;
      font-size: 15px !important;
    }
    hr {
      max-width: 128px;
      border-style: solid;
      border-width: 1px;
      margin: 14px auto;
    }
  }
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
.hr-right{
  border-right: 1px solid #096CAF;
}
.hr-bottom{
  border-bottom: 1px solid #096CAF;
}
.hr-top{
  border-top: 1px solid #096CAF;
}
.hr-left{
  border-left: 1px solid #096CAF;
}
.no-padding{
  padding: 0%;
}
.watermark {
  color: #6699ff;
  font-size: 100pt;
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  position: absolute;
  z-index: -1;
  left:200px;
  top:550px;
  text-align: center;
  opacity: 0.1;
}
.quote {
  font-size: 45px;
}
.notes {
  margin-top: 12px;
  font-size: 8px;
  width: 80%;
}
.wrapper-vertical {
  transform: rotate(-90deg);
  -webkit-transform: rotate(-90deg);
  text-align: center;
  height: 25mm;
  width: 25mm;
}
.vertical {
  white-space: nowrap;
  margin: 0; 
  font-size: 90%;
}
.text{
  padding-left: 2px;
}
br{
  padding-bottom: 5px;
}
.logo-quotations {
  height: 230px;
  margin: 0 auto !important;
}
.border-none {
  border: 0 !important;
}
.dates {
  border-bottom: 3px solid #f5f5f5;
  padding-top: 100px;
  padding-bottom: 100px;
  h4 {
    font-size: 32px;
    font-weight: bold;
  }
  p {
    font-size: 36px;
  }
}
.overview {
  padding-top: 290px;
  .info {
    background: #f5f5f5;
    i {
      margin-top: 18px;
      font-size: 120px !important;
      text-align: center;
    }
  }
}
.info {
  padding: 20px 35px;
  background: white;
  border: 1.5px solid #E0E0E0;
  border-bottom: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info i {
  font-size: 27px;
}
.info p {
  font-size: 15px;
  margin: 0;
}
.info p span {
  font-size: 18px;
  font-weight: bold;
}
.mot-icon {
  padding-right: 24px
}
.subtotal-price-single {
  background: #F8F8F8 !important;
  -webkit-print-color-adjust: exact !important;
  border-bottom: 1.5px solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subtotal-price-single h3 {
  padding-right: 50px;
  margin: 8px 0;
  font-size: 15px;
  text-align: right;
  font-weight: bold;
}
.subtotal-price-single h4 {
  padding-left: 50px;
  font-weight: bold;
  margin: 8px 0;
  font-size: 12px;
}
.subtotal-price-group {
  .subtotal-price-single {
    border-bottom: 1.5px solid #E0E0E0;
  }
  .subtotal-price-single:last-child {
    border-bottom: none !important;
  }
}
.total-price-single {
  background: white;
  border-top: none;
  border: 1.5px solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total-price-single h4 {
  font-size: 16px;
  font-weight: 400;
  margin: 10px 0;
  padding-left: 35px;
  text-transform: capitalize;
}
.total-price-single h3 {
  font-size: 20px;
  font-weight: bold;
  text-align: right;
  margin: 8px 0;
  padding-right: 35px;
}
.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8F8F8;
  border: 1.5px solid #BDBDBD;
}
.total-row h4 {
  font-style: italic;
  font-weight: bold;
  font-size: 20px;
  margin: 10px 0;
  padding-left: 30px;
}
.total-row p {
  font-weight: bold;
  padding-right: 30px;
  font-size: 28px;
  text-align: right;
  margin: 0;
}
.sub-prices {
  background: white;
}
.all-row {
  margin-bottom: 120px;
  page-break-inside: avoid;
  position: relative;
}
.shipment-info {
  flex-grow: 1;
}
.charge-icons {
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
  i {
    font-size: 14px;
  }
}
.charge-icons .col-xs-2 i {
  font-size: 60px !important;
}
.cargo-info {
  min-width: 110px;
}
.flip {
  transform: scaleX(-1);
}
.oo {
  max-height: 120px;
  width: 100%;
  opacity: 0;
}
.title-shipment-grey {
  border-bottom: 3px solid #E0E0E0;
  color: #4F4F4F;
  height: 100px;
  
  p:first-child {
    margin-top: 0;
    font-size: 50px;
    margin-bottom: 0;
    span {
      font-weight: bold;
    }
  }
  p:last-child {
    margin-top: 0;
    font-size: 37px;
    margin-bottom: 0;
    text-align: right;
  } 
}
.wrapper-shipments .title-shipments {
  text-align: center;
  padding: 320px 0 0 0 !important;
}
.wrapper-shipments .title-shipments h1 {
  font-size: 80px !important;
  font-weight: bold !important;
}
.wrapper-shipments .tenant-shipments h1 {
  font-size: 62px !important;
  font-weight: bold !important;
  padding: 364px 0 0 0 !important;
}
.wrapper-shipments hr {
  max-width: 100% !important;
  border-style: solid;
  border-width: 1px;
  margin: 40px 0 !important;
}
.border-right {
  border-right: 2px solid #f5f5f5;
}
.ref {
  font-size: 45px;
  padding-top: 25px;
  span {
    font-weight: bold;
  }
}
.padding-top {
  padding-top: 100px;
  page-break-inside: avoid;
}
.padding-top-half {
  padding-top: 50px;
  page-break-inside: avoid;
}
.padding-top-double {
  padding-top: 150px;
  page-break-inside: avoid;
}
.margin-left-negative {
  margin-left: -130px;
}
.contacts-row {
  p, h1, h2, h3 {
    margin: 0 auto;
  }
  .basic-info {
    i {
      font-size: 30px;
    }
    > div:first-child {
      margin-bottom: 18px;
    }
    h1 {
      font-weight: bold;
    }
  }
  .contact-info {
    i {
      font-size: 20px;
    }
    div {
      margin-bottom: 22px;
    }
  }
  .arrow-circle {
    font-size: 180px;
    color: #EAEAEA;
  }
}
.carriage-row {
  padding-top: 100px;
  padding-bottom: 80px;
  p {
    font-size: 27px !important;
  }
  h4 {
    font-size: 27px;
    font-weight: bold;
    margin: 0;
    margin-bottom: 12px;
  }
  i {
    font-size: 24px;
    padding-top: 2px;
    text-align: right;
    padding-right: 18px;
  }
}
.border-box {
  border: 5px solid #f5f5f5;
}
.border-bottom {
  border-bottom: 2px solid #f5f5f5;
}
.notes-row {
  span {
    font-size: 20px;
    font-weight: bold;
  }
   p {
     margin: 0;
     font-size: 28px;
   }
   .notes-upper div:first-child {
     padding-left: 8px;
   }
   .notes-upper, .notes-lower > div {
     padding: 30px 0 30px 30px;
   }
}
.margin-bottom {
  margin-bottom: 50px;
}
.services-box {
  padding-left: 40px;
  padding-right: 40px;
  hyphens: auto;
  p {
    margin:0;
    font-size: 37px;
    span {
      font-weight: bold;
    }
  }
  i {
    font-size: 42px !important;
    padding-left: 40px;
  }
  .flip {
    transform: scaleX(-1);
  }
  h2 {
    font-size: 47px;
    font-weight: bold;
  }
  h3 {
    margin-bottom: 80px;
    padding-top: 30px;
    font-size: 40px;
    font-weight: bold;
  }
}
.total-section {
  text-align: center;
  background: #f5f5f5;
  padding-top: 30px;
}
.cargo-details-title {
  height: 84px;
  background: #f5f5f5;
  h1 {
    margin: 0;
    font-size: 40px;
    font-weight: bold;
    padding-top: 20px;
    padding-left: 40px;
  }
}
.cargo-value {
  font-size: 32px;
  font-weight: bold;
}
.cargo-subtitle {
  font-size: 22px;
}
.first-cargo-row {
  padding: 30px 15px;
}
.cargo-items {
  padding-top: 22px;
  p {
    font-size: 36px !important;
  }
}
.cargo-index {
  padding-top: 20px;
  p {
    font-size: 45px; 
  }
}
.cargo-details-all {
  page-break-inside: avoid;
}