<% environment.context_class.instance_eval { include ApplicationHelper } %>

@import "font-awesome";
@import "normalize";

@font-face {
font-family: "FontAwesome";
font-weight: normal;
font-style : normal;
       src : url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.eot?v=4.3.0");
       src : url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.eot?#iefix&v=4.3.0") format("embedded-opentype"),
             url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.woff2?v=4.3.0") format("woff2"),
             url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.woff?v=4.3.0") format("woff"),
             url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.ttf?v=4.3.0") format("truetype"),
             url("https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/fonts/fontawesome-webfont.svg?v=4.3.0#fontawesomeregular") format("svg");
}

i.fa {
  font-family: "FontAwesome";
}

.wrapper {
  position: relative;
  margin: 0;
  width: 100%;
}
.wrapper-quotations {
  padding-left: 80px;
  padding-right: 60px;
  padding-top: 20px;
  color: #4F4F4F !important;
  font-family: 'Roboto', sans-serif !important;
  .title {
    padding-bottom: 48px;
    justify-content: space-between;
    h1 {
      font-size: 18px !important;
      font-weight: bold !important;
      margin: 0;
    }
    p {
      margin: 0;
      font-size: 12px !important;
    }
    hr {
      max-width: 107px;
      border-style: solid;
      border-width: 1px;
      margin: 7px 0;
    }
  }
}
.agent-info {
  text-align: right;
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
.hr-right{
  border-right: 1px solid #096CAF;
}
.hr-bottom{
  border-bottom: 1px solid #096CAF;
}
.hr-top{
  border-top: 1px solid #096CAF;
}
.hr-left{
  border-left: 1px solid #096CAF;
}
.no-padding{
  padding: 0%;
}
.watermark {
  color: #6699ff;
  font-size: 100pt;
  -webkit-transform: rotate(-45deg);
  -moz-transform: rotate(-45deg);
  position: absolute;
  z-index: -1;
  left:200px;
  top:550px;
  text-align: center;
  opacity: 0.1;
}
.quote {
  font-size: 45px;
}
.notes {
  margin-top: 12px;
  font-size: 8px;
  width: 80%;
}
.wrapper-vertical {
  transform: rotate(-90deg);
  -webkit-transform: rotate(-90deg);
  text-align: center;
  height: 25mm;
  width: 25mm;
}
.vertical {
  white-space: nowrap;
  margin: 0; 
  font-size: 90%;
}
.text{
  padding-left: 2px;
}
br{
  padding-bottom: 5px;
}
.logo-quotations {
  height: 230px;
  margin: 0 auto !important;
}
.border-none {
  border: 0 !important;
}
.dates {
  align-items: center;
  display: flex;
  justify-content: space-between;
  border-bottom: 3px solid #f5f5f5;
  padding-top: 10px;
  padding-bottom: 10px;
  h4 {
    font-size: 12px;
    font-weight: bold;
    margin: 8px 0;
  }
  p {
    margin: 10px 0;
    font-size: 14px;
  }
}
.overview {
  padding-top: 30px;
}
.overview-child {
  background: #F8F8F8 !important;
  -webkit-print-color-adjust: exact !important;
}
.info {
  padding: 20px 35px;
  background: white;
  border: 1.5px solid #E0E0E0;
  border-bottom: none;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.info i {
  font-size: 27px;
}
.info p {
  font-size: 15px;
  margin: 0;
}
.info p span {
  font-size: 18px;
  font-weight: bold;
}
.mot-icon {
  padding-right: 24px
}
.subtotal-price-single {
  background: #F8F8F8 !important;
  -webkit-print-color-adjust: exact !important;
  border-bottom: 1.5px solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subtotal-currency-single {
  background: #F5F5F5 !important;
  -webkit-print-color-adjust: exact !important;
  border-bottom: 1.5px solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.subtotal-currency-single h3 {
  padding-right: 45px;
  margin: 8px 0;
  font-size: 15px;
  text-align: right;
  font-weight: bold;
}
.subtotal-currency-single h4 {
  padding-left: 45px;
  font-weight: bold;
  margin: 8px 0;
  font-size: 12px;
}
.subtotal-price-single h3 {
  padding-right: 60px;
  margin: 8px 0;
  font-size: 15px;
  text-align: right;
  font-weight: bold;
}
.subtotal-price-single h4 {
  padding-left: 60px;
  font-weight: bold;
  margin: 8px 0;
  font-size: 12px;
}
.subtotal-price-group {
  .subtotal-price-single {
    border-bottom: 1.5px solid #E0E0E0;
  }
  .subtotal-price-single:last-child {
    border-bottom: none !important;
  }
}
.total-price-single {
  background: white;
  border-top: none;
  border: 1.5px solid #E0E0E0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.total-price-single h4 {
  font-size: 16px;
  font-weight: 400;
  margin: 10px 0;
  padding-left: 35px;
  text-transform: capitalize;
}
.total-price-single h3 {
  font-size: 20px;
  font-weight: bold;
  text-align: right;
  margin: 8px 0;
  padding-right: 35px;
}
.total-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #F8F8F8;
  border: 1.5px solid #BDBDBD;
}
.total-row h4 {
  font-style: italic;
  font-weight: bold;
  font-size: 20px;
  margin: 10px 0;
  padding-left: 30px;
}
.total-row p {
  font-weight: bold;
  padding-right: 30px;
  font-size: 28px;
  text-align: right;
  margin: 0;
}
.sub-prices {
  background: white;
}
.all-row {
  margin-bottom: 120px;
  page-break-inside: avoid;
  position: relative;
}
.shipment-info {
  flex-grow: 1;
}
.charge-icons {
  padding-bottom: 5px;
  display: flex;
  justify-content: space-between;
  i {
    font-size: 14px;
  }
}
.charge-icons .col-xs-2 i {
  font-size: 60px !important;
}
.cargo-info {
  min-width: 110px;
}
.flip {
  transform: scaleX(-1);
}
.oo {
  max-height: 120px;
  width: 100%;
  opacity: 0;
}
.title-shipment-grey {
  border-bottom: 3px solid #E0E0E0;
  color: #4F4F4F;
  height: 100px;
  
  p:first-child {
    margin-top: 0;
    font-size: 50px;
    margin-bottom: 0;
    span {
      font-weight: bold;
    }
  }
  p:last-child {
    margin-top: 0;
    font-size: 37px;
    margin-bottom: 0;
    text-align: right;
  } 
}
.title-shipments h1 {
  font-size: 20px !important;
  font-weight: bold !important;
  margin: 0;
}
.tenant-shipments h1 {
  font-size: 17px !important;
  font-weight: bold !important;
  margin: 0;
}
.hr-shipment {
  max-width: 100% !important;
  border-style: solid;
  border-width: 1px;
  margin: 14px 0 !important;
}
.main-title-shipment {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.border-right {
  border-right: 2px solid #f5f5f5;
}
.ref {
  font-size: 14px;
  span {
    font-weight: bold;
  }
}
.user-icon {
  font-size: 60px;
  color: #B7B7B7;
  padding-right: 20px;
}
.padding-top {
  padding-top: 10px;
  page-break-inside: avoid;
}
.padding-top-half {
  padding-top: 15px;
  page-break-inside: avoid;
}
.padding-top-double {
  padding-top: 30px;
  page-break-inside: avoid;
}
.margin-left-negative {
  margin-left: -130px;
}
.display-flex {
  display: flex;
}
.display-flex-center {
  display: flex;
  justify-content: space-between;
  align-items: center;
  &.border-box {
    align-items: unset;
  }
}
.contacts-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  h3 {
    font-weight: normal !important;
    font-size: 10px;
  }
  p, h1, h2, h3 {
    margin: 0 auto;
  }
  .basic-info {
    i {
      font-size: 12px;
      padding-right: 14px;
    }
    h1, h2, h3 {
      flex-grow: 1;
    }
    > div:first-child {
      margin-bottom: 8px;
    }
    h1 {
      font-weight: bold;
      font-size: 14px;
    }
    h2 {
      font-size: 11px
    }
  }
  .contact-info {
    font-weight: 400;
    i {
      font-size: 12px;
      padding-right: 14px;
    }
    h1, h2, h3 {
      flex-grow: 1;
    }
    div {
      margin-bottom: 8px;
    }
  }
  .arrow-circle {
    font-size: 45px;
    color: #EAEAEA;
  }
}
.carriage-row {
  padding: 25px 0;
  p {
    font-size: 12px !important;
    margin: 0;
  }
  h4 {
    font-size: 13px;
    font-weight: bold;
    margin: 0;
    margin-bottom: 8px;
  }
  i {
    font-size: 15px;
    text-align: right;
    padding-right: 12px;
  }
}
.border-box {
  border: 3px solid #f5f5f5;
}
.border-bottom {
  border-bottom: 2px solid #f5f5f5;
}
.notes-row {
  span {
    font-size: 11px;
    font-weight: bold;
    padding-right: 4px;
  }
   p {
     margin: 0;
     font-size: 12px;
     font-weight: normal;
   }
   .notes-upper {
     justify-content: space-around;
     align-items: center;
   }
   .notes-upper div:first-child {
     padding-left: 8px;
   }
   .notes-upper > div {
     padding: 8px 0;
   }
   .notes-lower > div {
     padding: 8px 0 8px 8px;
   }
}
.margin-bottom {
  margin-bottom: 17px;
}
.services-box {
  flex: 0 0 260px;
  padding-left: 30px;
  hyphens: auto;
  p {
    margin:0;
    font-size: 10px;
    span {
      font-weight: bold;
    }
  }
  i {
    padding-right: 10px;
    font-size: 16px !important;
    &.flip {
      padding-right: 0;
      padding-left: 14px;
    }
  }
  .flip {
    transform: scaleX(-1);
  }
  h3 {
    margin-bottom: 35px;
    padding-top: 4px;
    font-size: 14px;
    font-weight: bold;
  }
}
.flex-grow {
  flex-grow: 1;
}
.additional-services {
  p {
    margin: 0;
    font-size: 10px;
  }
  h3 {
    margin-bottom: 16px;
    padding-top: 4px;
    font-size: 14px;
    font-weight: bold;
  }
  i {
    padding-right: 10px;
    font-size: 16px !important;
  }
}
.total-section {
  text-align: center;
  background: #f5f5f5;
  padding-left: 40px;
  padding-right: 40px;
  hyphens: auto;
  padding-top: 30px;
  p {
    font-size: 12px; 
  }
  h2 {
    font-size: 16px;
  }
}
.cargo-details-title {
  height: 40px;
  background: #f5f5f5;
  h1 {
    margin: 0;
    font-size: 14px;
    font-weight: bold;
    padding-top: 10px;
    padding-left: 30px;
  }
}

.first-cargo-row {
  p {
    margin: 0;
  }
  .cargo-section {
    padding: 8px 8px;
  }
  .cargo-section-last {
    padding-right: 35px;
  }
  .cargo-items {
    p {
      font-size: 14px !important;
    }
  }
  .cargo-index {
    padding-left: 35px;
    p {
      font-size: 25px; 
    }
  }
  .cargo-value {
    font-size: 11px;
    font-weight: bold;
  }
  .cargo-subtitle {
    font-size: 8px;
  }
}
.cargo-details-all {
  page-break-inside: avoid;
}
