<% cargo_units = shipment.cargo_items.empty? ? shipment.containers : shipment.cargo_items %>

<div class="wrapper">
  <%= image_tag shipment.tenant.theme["logoLarge"], class: 'logo' %>
  <div class="col-xs-12 title" style="font-size: 150%; text-align: center;">
    <h1>QUOTATIONS</h1>
  </div>

  <div class="main-container container-fluid" > 
    <!-- first segment  -->
    <% quotes.map do |quote| %>
      <div class="info row">
        <% if quote["mode_of_transport"] == "ocean" %>
          <i class="fas fa-anchor col-xs-1"></i>
        <% end %>
        <% if quote["mode_of_transport"] == "air" %>
          <i class="fas fa-paper-plane col-xs-1"></i>
        <% end %>
        <div class="col-xs-11">
          <p>From:&nbsp;<span><%= quote["origin_hub"]["name"] %></span></p>
          <p>To:&nbsp;<span><%= quote["destination_hub"]["name"] %></span></p>
        </div>
      </div>
      
    
      <div class="total-row row">
        <h4 class="col-xs-6">Total</h4>
        <p class="quote col-xs-6"><%= quote["quote"]["total"]["value"].to_f.truncate(2) %>&nbsp;<%= quote["quote"]["total"]["currency"] %></p>
      </div>
        <% quote["quote"].each_pair do |k, v| %>
          <div class="sub-prices row">
            <% if k != "total" && k != "edited_total" %>
              <div class="col-xs-12">
                <div class="total-price-single row">
                  <h4 class="col-xs-6"><%= k %></h4>
                  <h3 class="col-xs-6"><%= v["total"]["value"].to_f.truncate(2) %>&nbsp;<%= quote["quote"]["total"]["currency"] %></h3>
                </div>
              </div>
              <% v.each_pair do |a, b| %>
                <% if a != "total" && a != "edited_total" %>
                  <div class="col-xs-12">
                    <div class="subtotal-price-single row">
                      <h4 class="col-xs-6"><%= a %></h4>
                      <% if b["value"] %>
                        <h3 class="col-xs-6"><%= b["value"] %>&nbsp;<%= quote["quote"]["total"]["currency"] %></h3>
                      <% else %>
                        <h3 class="col-xs-6"><%= b["total"]["value"] %>&nbsp;<%= quote["quote"]["total"]["currency"] %></h3>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
        <% end %>
    <% end %>
  </div>
</div>