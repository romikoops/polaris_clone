<mj-wrapper full-width="full-width" padding="0px">
    <% if defined? closing_text %>
      <mj-section full-width="full-width" padding="0px">
        <mj-column width="100%" padding="0 2.5%">
          <mj-text line-height="24px">
            <p>
              <%= closing_text %>
            </p>
          </mj-text>
        </mj-column>
      </mj-section>
      <% end %>
        <mj-section full-width="full-width" padding="0px">
          <mj-column width="100%" padding="0 2.5%">
            <mj-text>
              <p>
                <p>Thank you for your interest and best regards,</p>
              </p>
            </mj-text>

          </mj-column>
        </mj-section>
        <mj-section full-width="full-width" padding="0px">
          <mj-column width="100%" padding="0 2.5%">
            <mj-text line-height="24px">
              <p>
                <span class="bold"><%=@user.tenant.name %></span><br>
                <% @user.tenant.addresses["components"].each do |address_line| %>
                  <%= address_line %> <br>
                <% end %>
            </mj-text>

          </mj-column>
        </mj-section>
        <mj-section full-width="full-width" padding="0px">
          <mj-column width="100%" padding="0 2.5%">
            <mj-text>
              <p style="font-size: 12px;text-align: center;font-weight: bolder;font-size: 10px;color: #BDBDBD;letter-spacing: 0.2px;line-height: 17px">
                This is an auto-generated mail. Please respond to our support mail with any inquiries. <br>Find your dedicated contact on
                <a href="<%= @user.tenant.scope.dig('links', 'legal')%>">
                  <%= @user.tenant.scope.dig('links', 'legal')%>
                </a>.
                <p>
            </mj-text>
          </mj-column>
        </mj-section>
  </mj-wrapper>