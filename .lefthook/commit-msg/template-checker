#!/usr/bin/env ruby
# frozen_string_literal: true

input_file, * = ARGV
commit_message = File.read(input_file)

if /([a-z{2,}])-[[:digit:]]/.match?(commit_message.gsub(/^#.*/, "").strip[0, 9])
  warn "â€¢ Use only upper case ticket numbers in commit messages."
  warn "  POL-1234: summary"
  warn ""
  warn ">#{commit_message}<"

  exit 1
end

exit 0
