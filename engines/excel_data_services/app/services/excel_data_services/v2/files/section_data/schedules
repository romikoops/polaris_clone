# frozen_string_literal: true

required "1:1", "A:K", %w[VESSEL_NAME VESSEL_CODE ORIGIN_DEPARTURE DESTINATION_ARRIVAL VOYAGE_CODE]

column "vessel_name",
  sanitizer: "text",
  validator: "string",
  required: true,
  type: :object

column "origin_locode",
  sanitizer: "text",
  validator: "locode",
  required: true,
  type: :object,
  alternative_keys: ["origin"]

column "destination_locode",
  sanitizer: "text",
  validator: "locode",
  required: true,
  type: :object,
  alternative_keys: ["destination"]

column "origin_departure",
  sanitizer: "date",
  validator: "date",
  required: true,
  type: :object

column "destination_arrival",
  sanitizer: "date",
  validator: "date",
  required: true,
  type: :object

column "closing_date",
  sanitizer: "date",
  validator: "date",
  required: true,
  type: :object

column "carrier",
  sanitizer: "text",
  validator: "string",
  required: true,
  type: :object

column "carrier_code",
  sanitizer: "downcase",
  validator: "string",
  required: false,
  alternative_keys: ["carrier"]

column "service",
  sanitizer: "text",
  validator: "string",
  required: true,
  type: :object,
  alternative_keys: ["service_level"]

column "mode_of_transport",
  sanitizer: "text",
  validator: "string",
  required: true,
  type: :object,
  alternative_keys: ["mot"]

column "vessel_code",
  sanitizer: "text",
  validator: "optional_string",
  required: false,
  type: :object

column "voyage_code",
  sanitizer: "text",
  validator: "optional_string",
  required: false,
  type: :object

row_validation %w[origin_departure destination_arrival], (proc { |a, b| a < b })
row_validation %w[closing_date origin_departure], (proc { |a, b| a <= b })

add_validator "Carrier"
add_validator "TenantVehicle"
add_validator "RouteHubs"

add_formatter "Schedule"

model_importer Schedules::Schedule
target_model Schedules::Schedule
