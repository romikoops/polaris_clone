<tr class="table-level-<%= fee[:level]%>">
  <td class="table-title-<%= fee[:level]%>">
    <p>
        <%= fee[:description] %>
        <% if
          scope['show_chargeable_weight'] &&
          fee[:level] == 1 &&
          fee[:code].present? &&
          !['import', 'export'].include?(fee[:code])
        %>
          <%== tender.chargeable_weight_string(section: fee[:code]) %>
        <% end %>
    </p>
  </td>

  <td class="table-value">
    <p><%= [fee.dig(:value, :amount), fee.dig(:value, :currency)].join(' ') %></p>
  </td>
</tr>
