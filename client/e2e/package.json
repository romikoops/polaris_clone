{
  "name": "e2e",
  "version": "1.0.0",
  "description": "End-to-end tests",
  "main": "index.js",
  "scripts": {
    "dev": "E2E_DOCKER=true jest",
    "devx": "PUPPETEER_HEADLESS=true E2E_DOCKER=true jest",
    "docker": "docker-compose up --remove-orphans",
    "build": "docker build -t e2e .",
    "clean": "sudo rm -rf -d _screens/*.png",
    "test": "STEP_DELAY=200 jest"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testRegex": "test.js$"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "color-diff": "^0.1.5",
    "concat-stream": "^1.5.0",
    "lodash": "^4.17.3",
    "log-symbols": "^2.2.0",
    "parse-color": "^1.0.0",
    "pngjs": "^3.0.1",
    "puppeteer": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "7.0.0-beta.39",
    "babel-core": "^7.0.0-0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.1.0",
    "log": "https://github.com/selfrefactor/log-fn#1.2.0"
  }
}
