commands:
  01_download_node:
    cwd: /var/app/current
    command: curl --silent --location https://rpm.nodesource.com/setup_8.x | sudo bash -
  02_install_node:
    cwd: /var/app/current
    command: sudo yum -y install nodejs
  03_install_mjml:
    cwd: /var/app/current
    command: sudo npm install mjml -g
  04_install_nokogiri:
    gem install nokogiri -v '1.8.4'