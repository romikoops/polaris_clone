    },
    {
      "required": true,
      "name": "email",
      "description": "User's email address"
    },
    {
      "required": true,
      "name": "password",
      "description": "User's Password"
    }
  ],
  "response_fields": [
    {
      "name": "access_token",
      "description": "OAuth token to be used in further connections"
    },
    {
      "name": "token_type",
      "description": "OAuth token type"
    },
    {
      "name": "expires_in",
      "description": "Time in seconds token is valid"
    },
    {
      "name": "created_at",
      "description": "UNIX Timestamp in seconds token was created"
    }
  ],
  "requests": [
